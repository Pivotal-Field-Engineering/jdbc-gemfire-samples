<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${org.kp.log-file}</File>
        <encoder>
            <pattern>%d{dd MMM HH:mm:ss.SSS} %p [%c{1}.%M] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>10</maxIndex>
            <FileNamePattern>${org.kp.log-file}.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
    </appender>
    
    <appender name="error_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender -->
        <File>${org.kp.error-log-file}</File>
        <encoder>
            <pattern>%d{dd MMM HH:mm:ss.SSS} %p [%c{1}.%M] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>10</maxIndex>
            <FileNamePattern>${org.kp.error-log-file}.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
    </appender>
    
    <logger name="com.kp.ttg.SimpleRowWriter-ERROR_LOG"  >
        <appender-ref ref="error_file" />
    </logger>
    
    <root level="debug">
        <appender-ref ref="file" />
    </root>
    
</configuration>
