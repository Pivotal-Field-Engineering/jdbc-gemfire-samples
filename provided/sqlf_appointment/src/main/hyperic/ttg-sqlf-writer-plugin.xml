<plugin>
    <service name="TTG SQLF Writer" server="Sun JVM" version="1.5">

        <plugin type="measurement" class="org.hyperic.hq.product.jmx.MxMeasurementPlugin" />

        <plugin type="control" class="org.hyperic.hq.product.jmx.MxControlPlugin" />

        <plugin type="log_track" class="org.hyperic.hq.product.jmx.MxNotificationPlugin" />

        <property name="AUTOINVENTORY_NAME" value="%platform.name% SimpleRowWriter %name%" />

        <property name="OBJECT_NAME" value="org.kp.writer:service=SimpleRowWriter,name=*" />

        <plugin type="autoinventory" />

        <metric name="Consecutive Error Count" template="${OBJECT_NAME}:consecutiveErrorCount" indicator="true" />

        <metric name="Total Error Count" template="${OBJECT_NAME}:totalErrorCount" indicator="true" />

        <metric name="Ignore Next Error" template="${OBJECT_NAME}:ignoreNextError" indicator="true" />

        <metric name="Disabled" template="${OBJECT_NAME}:disabled" indicator="true" />

        <actions include="reset,ignoreNextError" />

    </service>
</plugin>